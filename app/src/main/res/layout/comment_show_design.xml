<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cmtshowprofileimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cmtshowdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/cmtshowdisc"
        app:layout_constraintTop_toBottomOf="@+id/cmtshowdisc" />

    <TextView
        android:id="@+id/cmtshowdisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="namee"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/cmtshowprofileimg"
        app:layout_constraintTop_toTopOf="@+id/cmtshowprofileimg" />

    <View
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmtshowdate" />


</androidx.constraintlayout.widget.ConstraintLayout>